@model List<StockManagement.Models.StorageViewModel>;

@{
    ViewData["Title"] = "Stockages";
}

<div class="container">
    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-bordered">
            <caption>Liste de stockage</caption>
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model[0].Name)</th>
                    <th scope="col">Contenu</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var storage in Model)
                {
                    <tr>
                        <td>@storage.Name</td>
                        <td><a asp-action="Details" asp-controller="Storage" asp-route-id="@storage.Id">Contenu</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Pas de stockage trouvé</p>
    }
</div>
